<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <View
        android:id="@+id/hdr"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#000000"></View>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/back"
        android:layout_width="35dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/ic_baseline_arrow_back_24"></androidx.appcompat.widget.AppCompatButton>

<!--this can be used for chrisbane photo view library-->
<!--    -->
    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/hdr"></com.github.chrisbanes.photoview.PhotoView>

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/trashimg"
        android:layout_alignParentRight="true"
        android:layout_marginRight="70dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_baseline_delete_24"

        ></ImageButton>

    <ImageButton
        android:id="@+id/editbutton"

        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_baseline_edit_24"

        ></ImageButton>

</RelativeLayout>